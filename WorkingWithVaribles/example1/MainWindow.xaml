<Window x:Class="CodeRunnerTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeRunnerTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblValue" Content="Enter a vale" HorizontalAlignment="Left" Margin="31,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="105,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="134" Margin="103,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" SpellCheck.IsEnabled="True"/>
        <Button x:Name="btnGo" Content="Go !" HorizontalAlignment="Left" Margin="106,202,0,0" VerticalAlignment="Top" Width="75" Click="btnGo_Click"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="193,201,0,0" VerticalAlignment="Top" Width="75" Click="btnClear_Click"/>

    </Grid>
</Window>
